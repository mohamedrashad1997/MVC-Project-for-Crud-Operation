@model Category
@{
    ViewData["Title"] = "Create";
}

<h1>Create Category</h1>

<div>
    <div class="col-6">
        <form asp-controller="Category" asp-action="Create">
            <div class="form-group">
                <label asp-for="@Model.CategoryName" class="col-form-label"></label>
                <input asp-for="@Model.CategoryName" class="form-control">
                <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CategoryDescription" class="col-form-label"></label>
                <input asp-for="@Model.CategoryDescription" class="form-control">
                <span asp-validation-for="@Model.CategoryDescription" class="text-danger"></span>
            </div>
            <input type="submit" value="Add" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>
